<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/klippekort_bagrund">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errorLoyaltyCard"
        android:text="Mine Klippekort"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/købKlip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/errorLoyaltyCard"
        android:layout_marginTop="200dp"
        android:text="Køb klippekort her"/>

    <ListView
        android:id="@+id/listOfUsersLoyaltyCards"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/errorLoyaltyCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:dividerHeight="10.0sp"/>
</RelativeLayout>

