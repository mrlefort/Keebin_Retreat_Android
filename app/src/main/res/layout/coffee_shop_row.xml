        android:textSize="30px"
        android:layout_marginBottom="20px">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:text="ADRESSE"/>
    </LinearLayout>

